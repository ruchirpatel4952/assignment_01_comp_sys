/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notsel);
    And(a=a, b=notsel, out=a_and_notsel);
    And(a=b, b=sel, out=b_and_sel);
    Or(a=a_and_notsel, b=b_and_sel, out=out);
}